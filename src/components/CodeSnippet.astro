---
import CodeFormat from "@components/CodeFormat"
import CodeInformation from "./CodeInformation.astro";

interface Props{
    code: string;
}

const { code } = Astro.props;
---

<section class="w-full py-4 px-6 flex flex-col gap-3">
    <CodeInformation/>
    <div class="p-4 border-[1px] border-linescolor rounded-2xl bg-primary-dark flex justify-start items-center">
        <CodeFormat client:only="react" code={code} />
    </div>
</section>