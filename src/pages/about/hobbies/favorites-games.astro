---
import Layout from '@layouts/Layout.astro';
import AboutLayout from "@layouts/about/AboutLayout.astro"
import CommentCode from '@components/CommentCode';

const code = `I'm a big fan of strategic games, especially chess and board games. There's something satisfying about planning moves ahead and outsmarting my opponents.`;
---
<Layout title="Franklin Rodriguez">
    <AboutLayout>
          <div class="p-5 py-10 max-w-[900px]">
            <CommentCode code={code} client:only="react"/>
        </main>
    </AboutLayout>
</Layout>