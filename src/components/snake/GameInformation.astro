---
import ButtonEG from "@components/snake/ButtonEG.astro"
import ShowFoodLeft from "@components/snake/ShowFoodLeft";

---

<div class="h-full w-full flex flex-col justify-start items-end">
    <div class="bg-controls h-fit p-[10px] flex flex-col rounded-lg information-controls ">
        <p class="text-white font-fire-code-retina whitespace-nowrap">// use your keyboard</p>
        <p class="text-white font-fire-code-retina">// arrows to play</p>
        <div class="mt-5 flex  flex-wrap justify-center items-center gap-1">
            <div class="w-full flex justify-center">
                <ButtonEG direction="UP"/>
            </div>
            <ButtonEG direction="UP"/>
            <ButtonEG direction="UP"/>
            <ButtonEG direction="UP"/>
        </div>
    </div>
    <div class="mt-5 pl-5 m-auto">
        <p class="text-white font-fire-code-retina">// food left</p>
        <ShowFoodLeft/>
    </div>
    <a href="/about" class="mt-auto ml-auto font-fire-code-retina rounded-lg border-white border-2">
        skip
    </a>
</div>

<style>
@media screen and (min-width: 1537px) {
    .information-controls{
        width: 84%;
    }
    
    p{   
        font-size: 14px;
    }
    a{
        font-size: 14px;
        padding-top: 8px;
        padding-bottom: 8px;
        padding-left: 16px;
        padding-right: 16px;
    }
    
}

@media screen and (min-width: 1025px) and (max-width: 1536px) {
    .information-controls{
        width: 100%;
    }
	p{
		font-size: 12px;
	}

    a{
        font-size: 12px;
        padding-top: 6px;
        padding-bottom: 6px;
        padding-left: 12px;
        padding-right: 12px;
    }
}
</style>